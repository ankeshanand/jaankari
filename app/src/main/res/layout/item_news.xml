<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/NewsListUpperLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/blue"
        android:layout_marginBottom="2dp"
        android:clickable="true"
        android:onClick="newsClickedUp"
        >
    <TextView
        android:id="@+id/newsTitleUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Title" />
    <TextView
        android:id="@+id/newsSummaryUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Summary of the news article" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/blue"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:onClick="newsClickedDown"
        >
        <TextView
            android:id="@+id/newsTitleDown"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Title" />
        <TextView
            android:id="@+id/newsSummaryDown"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Summary of the news article" />
    </LinearLayout>
</LinearLayout>
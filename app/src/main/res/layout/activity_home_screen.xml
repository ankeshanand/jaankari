<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="jaangari.opensoft.iitkgp.jaankari.HomeScreen">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!--<TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:textStyle="bold" android:textSize="50sp" android:gravity="center"/>-->
    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:background="#FFFFFF"
        android:queryHint="@string/query_hint"
        android:gravity="bottom"
        android:layout_gravity="top"
        android:inputType="textAutoComplete"/>
    <!--    android:text="@string/dummy_content" /> -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->


    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fitsSystemWindows="true">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button android:id="@+id/logout_button" style="?metaButtonBarButtonStyle"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_weight="1" android:text="@string/logout"
                android:background="@color/black_overlay"
                android:layout_gravity="bottom" />
        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="478dp"
        android:layout_gravity="left|center_vertical">

        <TextView
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:text="Videos"
            android:background="#AAAABB"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="95dp"
            android:id="@+id/videos_textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="#0919AA"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="News"
            android:id="@+id/news_textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/videos_textView"
            android:layout_toEndOf="@+id/videos_textView"
            android:layout_alignTop="@+id/videos_textView" />

    </RelativeLayout>


</FrameLayout>
